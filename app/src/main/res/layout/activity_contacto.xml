<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_contacto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.usuario.webesdi.Contacto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="@string/contacto_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/Titulo"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

        <TextView
            android:text="@string/contacto_subtitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/TienesDudas"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/numero"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                app:srcCompat="@drawable/telefono"
                android:layout_weight="0.88" />

            <ImageView
                android:id="@+id/btnCorreo"
                android:layout_width="95dp"
                android:layout_height="37dp"
                app:srcCompat="@drawable/arroba"
                android:layout_weight="0.30" />

            <ImageView
                android:id="@+id/btnChat"
                android:layout_width="133dp"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:onClick="lanzarMensajes"
                app:srcCompat="@drawable/chat" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.88"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/llamanos"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2.07"
                android:gravity=""
                android:text="@string/contacto_telefono"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/email"
                android:layout_width="103dp"
                android:layout_height="match_parent"
                android:layout_weight="0.29"
                android:gravity=""
                android:text="@string/contacto_correo"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2.17"
                android:gravity=""
                android:text="@string/contacto_consultas"
                android:textAlignment="center" />

        </LinearLayout>

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="368dp" />

    </LinearLayout>
</RelativeLayout>
