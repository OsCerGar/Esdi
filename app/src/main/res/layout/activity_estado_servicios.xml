<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/activity_menu_principal"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.usuario.webesdi.EstadoServicios"
tools:layout_editor_absoluteY="81dp"
tools:layout_editor_absoluteX="0dp">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/btncantina"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="16dp"
            app:srcCompat="@drawable/cantina_vermell"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textDocs" />

        <ImageView
            android:id="@+id/btnGoogleGmail"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toRightOf="@+id/btnContacto"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/gmail_vermell"
            app:layout_constraintTop_toTopOf="@+id/btnGoogleCalendar"
            android:layout_marginTop="0dp" />

        <ImageView
            android:id="@+id/btnGoogleCalendar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/calendari_vermell"
            app:layout_constraintTop_toTopOf="@+id/btncantina"
            android:layout_marginTop="0dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />


        <ImageView
            android:id="@+id/btnwifi"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/wifi_vermell"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/btnimpresoras"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/impresora_vermell"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/textimpresoras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="8dp"
            android:text="@string/menuSimpresores"
            android:textColor="#707070"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="@+id/btnimpresoras"
            app:layout_constraintRight_toRightOf="@+id/btnimpresoras"
            app:layout_constraintTop_toBottomOf="@+id/estatPrinters" />

        <ImageView
            android:id="@+id/btnGoogleDocs"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/docs_vermell"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/textWifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/menuSwifi"
            android:textColor="#707070"
            android:textSize="20sp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="@+id/btnwifi"
            app:layout_constraintRight_toRightOf="@+id/btnwifi"
            app:layout_constraintTop_toBottomOf="@+id/estatWifi" />


        <TextView
            android:id="@+id/textDocs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/menuSdocs"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="@+id/btnGoogleDocs"
            app:layout_constraintRight_toRightOf="@+id/btnGoogleDocs"
            app:layout_constraintTop_toBottomOf="@+id/estatGoogleDocs" />

        <TextView
            android:id="@+id/textCafe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/menuScafeteria"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="@+id/btncantina"
            app:layout_constraintRight_toRightOf="@+id/btncantina"
            app:layout_constraintTop_toBottomOf="@+id/estatCafe" />

        <TextView
            android:id="@+id/textCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/menuScalendar"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="@+id/btnGoogleCalendar"
            app:layout_constraintRight_toRightOf="@+id/btnGoogleCalendar"
            app:layout_constraintTop_toBottomOf="@+id/estatGoogleCalendar" />

        <TextView
            android:id="@+id/textGmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/menuSmail"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="@+id/btnGoogleGmail"
            app:layout_constraintRight_toRightOf="@+id/btnGoogleGmail"
            app:layout_constraintTop_toBottomOf="@+id/estatGmail" />

        <TextView
            android:id="@+id/estatPrinters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/estat"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@+id/btnimpresoras"
            app:layout_constraintTop_toBottomOf="@+id/btnimpresoras" />

        <ImageView
            android:id="@+id/btnestatPrinters"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/innactiu"
            android:layout_marginTop="0dp"
            app:layout_constraintRight_toRightOf="@+id/btnimpresoras"
            app:layout_constraintTop_toBottomOf="@+id/btnimpresoras" />


            />


        <TextView
            android:id="@+id/estatWifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/estat"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@+id/btnwifi"
            app:layout_constraintTop_toBottomOf="@+id/btnwifi" />

        <ImageView
            android:id="@+id/btnestatWifi"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/innactiu"
            app:layout_constraintRight_toRightOf="@id/btnwifi"
            app:layout_constraintTop_toBottomOf="@+id/btnwifi" />
        <TextView
            android:id="@+id/estatGoogleDocs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/estat"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@+id/btnGoogleDocs"
            app:layout_constraintTop_toBottomOf="@+id/btnGoogleDocs" />
        <ImageView
            android:id="@+id/btnestatGoogleDocs"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/innactiu"
            app:layout_constraintRight_toRightOf="@id/btnGoogleDocs"
            app:layout_constraintTop_toBottomOf="@id/btnGoogleDocs" />
        <TextView
            android:id="@+id/estatCafe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/estat"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@id/btncantina"
            app:layout_constraintTop_toBottomOf="@id/btncantina" />
        <ImageView
            android:id="@+id/btnestatCafe"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/innactiu"
            app:layout_constraintRight_toRightOf="@id/btncantina"
            app:layout_constraintTop_toBottomOf="@id/btncantina" />
        <TextView
            android:id="@+id/estatGoogleCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/estat"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@+id/btnGoogleCalendar"
            app:layout_constraintTop_toBottomOf="@+id/btnGoogleCalendar" />
        <ImageView
            android:id="@+id/btnestatGoogleCalendar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/innactiu"
            app:layout_constraintRight_toRightOf="@id/btnGoogleCalendar"
            app:layout_constraintTop_toBottomOf="@id/btnGoogleCalendar"/>
        <TextView
            android:id="@+id/estatGmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/estat"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@+id/btnGoogleGmail"
            app:layout_constraintTop_toBottomOf="@+id/btnGoogleGmail" />
        <ImageView
            android:id="@+id/btnestatGmail"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/innactiu"
            app:layout_constraintRight_toRightOf="@+id/btnGoogleGmail"
            app:layout_constraintTop_toBottomOf="@+id/btnGoogleGmail"  />



    </android.support.constraint.ConstraintLayout>
</ScrollView>
</RelativeLayout>